		<section class="flex flex-col gap-1">
			<h2 class="text-xl font-bold uppercase tracking-widest text-[var(--text-secondary)] flex items-center gap-4">
				Skill<span class="flex-grow h-px bg-nav"></span>
			</h2>

			<div class="flex flex-col">
				<h3 class="text-lg font-bold tracking-tight">Programming:</h3>
				<div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-8 gap-3">
					{['Javascript', 'HTML', 'CSS', 'React', 'Node.js', 'Python', 'Java', 'Bash'].map(skill => (
						<div class="p-3 border border-nav rounded-xl flex items-center justify-center text-sm font-bold hover:border-accent hover:text-accent transition-all cursor-default text-center">
							{skill}
						</div>
					))}
				</div>
				<br>
				<h3 class="text-lg font-bold tracking-tight">Infrastructure:</h3>
				<!-- <span>• Linux, AWS, CI/CD, Docker, Ansible, Jenkins</span> -->
				<div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-7 gap-3">
					{['Linux', 'AWS', 'CI/CD', 'Docker', 'Ansible', 'Jenkins'].map(skill => (
						<div class="p-3 border border-nav rounded-xl flex items-center justify-center text-sm font-bold hover:border-accent hover:text-accent transition-all cursor-default text-center">
							{skill}
						</div>
					))}
				</div>
				<br>
				<h3 class="text-lg font-bold tracking-tight">Infosec:</h3>
				<!-- <span>• Osint, Metaploits, Web Security</span> -->
				<div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-3">
					{['Osint', 'Metaploits', 'Web Security'].map(skill => (
						<div class="p-3 border border-nav rounded-xl flex items-center justify-center text-sm font-bold hover:border-accent hover:text-accent transition-all cursor-default text-center">
							{skill}
						</div>
					))}
				</div>
			</div>
		</section>

		<section class="flex flex-col gap-1">
			<h2 class="text-lg font-bold uppercase tracking-widest text-[var(--text-secondary)] flex items-center gap-4">
				Language<span class="flex-grow h-px bg-nav"></span>
			</h2>
			
			<div class="flex flex-col">
				<ul class="flex flex-col gap-2 font-medium text-lg md:text-base leading-relaxed">
					<li>• English (Proficient)</li>
					<li>• Japanese (N2)</li>
				</ul>
			</div>
		</section>



		<section class="flex flex-col gap-1">
			<h2 class="text-lg font-bold uppercase tracking-widest text-[var(--text-secondary)] flex items-center gap-4">
				Education <span class="flex-grow h-px bg-nav"></span>
			</h2>
			
			<div class="flex flex-col gap-4 relative pl-8 border-l-2 border-nav">
				<div class="flex flex-col md:flex-row justify-between items-baseline gap-2">
					<h3 class="text-lg font-medium tracking-tight">Bachelor of Infomation Technology, RMIT University</h3>
					<span class="text-[16px] font-medium text-[var(--text-secondary)] italic">2023 - 2026</span>
				</div>

			</div>
		</section>
	</div>

	<Footer slot="footer" />
</BaseLayout>
