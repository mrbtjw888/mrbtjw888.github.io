---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Home">
	<Header slot="header" />
	
	<section class="py-12 md:py-16 flex flex-col items-start gap-6">
		<h1 class="text-4xl md:text-5xl font-extrabold tracking-tight">
			Welcome to <span class="text-accent">/</span>.
		</h1>
		<p class="text-base md:text-lg text-[var(--text-secondary)] font-medium max-w-2xl leading-relaxed">
			This site serves as a documentation hub and personal blog for my learning journey.
		</p>
<!-- 		<div class="flex flex-wrap gap-4 pt-4">
			<a href="/blog" class="btn-primary shadow-sm hover:shadow-md transition-shadow">
				Explore Blog
			</a>
			<a href="/resources" class="border border-nav px-6 py-2 rounded-lg font-semibold text-sm hover:bg-[var(--nav-hover)] transition-all">
				Browse Resources
			</a>
		</div> -->
	</section>

	<section class="grid grid-cols-1 md:grid-cols-3 gap-6 py-12 border-t border-nav">
		<a href="/blog" class="p-8 rounded-2xl bg-[var(--card-bg)] border border-nav hover:border-accent group transition-all">
			<h2 class="text-2xl font-bold mb-3 transition-colors group-hover:text-accent">Blog</h2>
			<p class="text-[var(--text-secondary)] font-medium text-sm md:text-base leading-snug">Unordered list of my learning journey, guides, discussion, ...</p>
		</a>
		<a href="/portfolio" class="p-8 rounded-2xl bg-[var(--card-bg)] border border-nav hover:border-accent group transition-all">
			<h2 class="text-2xl font-bold mb-3 transition-colors group-hover:text-accent">Profile</h2>
			<p class="text-[var(--text-secondary)] font-medium text-sm md:text-base leading-snug">A view of my work history, skills, and educational background.</p>
		</a>
		<a href="/resources" class="p-8 rounded-2xl bg-[var(--card-bg)] border border-nav hover:border-accent group transition-all">
			<h2 class="text-2xl font-bold mb-3 transition-colors group-hover:text-accent">Resources</h2>
			<p class="text-[var(--text-secondary)] font-medium text-sm md:text-base leading-snug">List of explored interest.</p>
		</a>
	</section>

	<Footer slot="footer" />
</BaseLayout>
